i=0
repeat
	mon = peripheral.find("monitor")
	if not mon then
		i = i+1
		print("Checking monitor availabilty every second | "..tostring(20-i).."seconds left before exiting")
		print("Please ensure you have plugged one in !")
		sleep(1)
		term.clear()
		term.setCursorPos(1,1)
	end
until mon or i==20

function draw(...)
	button = arg
	monX, monY = mon.getSize()
	xmax = button.x+width
	ymax = button.y+height
	if button.x<monX and button.y<monY and xmax<monX and ymax<monY then
		mon.setCursorPos(button.x,button.y)
		mon.setBackgroundColor(button.color)
		repeat
			mon.setBackgroundColor(button.color)
			button.x = button.x+1
		until button==xmax
			y=y+1
	until button.y==ymax
	else
		mon.write("Please review your Button dimentions, they exceed monitor size !")
	end
end

